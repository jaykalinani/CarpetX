# Schedule definitions for thorn TestLoopX

STORAGE: testloop_gf

SCHEDULE TestLoopX_Init AT initial
{
  LANG: C
  WRITES: testloop_gf(interior)
  WRITES: testloop_gf_fx(interior)
  WRITES: testloop_gf_fy(interior)
  WRITES: testloop_gf_fz(interior)
  SYNC: testloop_gf
  SYNC: testloop_gf_fx
  SYNC: testloop_gf_fy
  SYNC: testloop_gf_fz
} "Initialize test grid function"

SCHEDULE TestLoopX_Sync AT postregrid
{
  LANG: C
  OPTIONS: global
  SYNC: testloop_gf
} "Synchronize test grid function"

SCHEDULE TestLoopX_OutermostInterior AT poststep
{
  LANG: C
  READS: testloop_gf(interior)
  WRITES: testloop_gf(interior)
  SYNC: testloop_gf
} "Fill test grid function which correspond to the outermost points in the interior"

SCHEDULE TestLoopX_Mix AT poststep AFTER TestLoopX_OutermostInterior
{
  LANG: C
  READS: testloop_gf_fx(everywhere)
  READS: testloop_gf_fy(everywhere)
  READS: testloop_gf_fz(everywhere)
  WRITES: testloop_gf_fx(everywhere)
  WRITES: testloop_gf_fy(everywhere)
  WRITES: testloop_gf_fz(everywhere)
} "Fill test grid function which correspond to the outermost points in the interior"
